<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#A2C6FB">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
                android:layout_height="fill_parent" 
                android:layout_width="fill_parent">
        <TableLayout
            android:id="@+id/widget42"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <TableRow
                android:id="@+id/trnf1"
                android:layout_width="467dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFFar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farmacia"
                    android:textColor="#ff6633ff" />
                <EditText
                    android:id="@+id/ETNFFar"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"	
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf2"
                android:layout_width="467dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFCol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colonia"
                    android:textColor="#ff6633ff" />    
                <EditText
                    android:id="@+id/ETNFCol"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"	
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf3"
                android:layout_width="467dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo"
                    android:textColor="#ff6633ff" />    
                <Spinner
                    android:id="@+id/SPNFTip"
                    android:layout_width="354dp"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow android:id="@+id/trnf4"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFDir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direccion"
                    android:textColor="#ff6633ff" />    
                <EditText
                    android:id="@+id/ETNFDir"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"	
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf5"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFCP"                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C.P."
                    android:textColor="#ff6633ff" />    
                <EditText
                    android:id="@+id/ETNFCP"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"	
                    android:numeric="integer"
                    android:maxLength="5"
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf6"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFMun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Municipio"
                    android:textColor="#ff6633ff" />    
                <EditText
                    android:id="@+id/ETNFMun"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"	
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf7"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFCiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudad"
                    android:textColor="#ff6633ff" />    
                <EditText
                    android:id="@+id/ETNFCiu"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"	
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf7"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/TVNFTel"                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textColor="#ff6633ff" />    
                <EditText
                    android:id="@+id/ETNFTel"
                    android:layout_width="350dp"
                    android:numeric="integer"
                    android:layout_height="wrap_content"	
                    android:textSize="18sp" />
            </TableRow>
            <TableRow android:id="@+id/trnf8"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnNFReg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Registrar Farmacia" />                    
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>